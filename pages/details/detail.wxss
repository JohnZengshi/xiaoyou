page,.section{
  width: 100%;
  height: 100%;
  /* overflow-x: hidden; */
}

.section{
  border-top: 1px solid #ddd;
}

.section .comment {
  height: 260rpx;
  display: flex;
  flex-direction: row;
  padding: 32rpx; 
  padding-bottom: 0;
}

.section .comment .pic {
  border-radius: 8rpx;
  width: 208rpx;
  height: 208rpx;
}

.section .comment .content {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.section .comment .content>text:first-of-type {
  font-size: 30rpx;
  color: #333;
  -webkit-line-clamp: 2;
  margin-bottom:-3rpx;
  word-break:break-all;
  -webkit-box-orient:vertical;
  overflow:hidden;
  display:-webkit-box;
}

.section .comment .content>text:last-of-type{
    font-size: 26rpx;
    color: #A5A5A5;
    float: left;
    text-decoration: line-through; 
    line-height: 58rpx;
}

.section .comment .content .JG {
  display: flex;
  flex-direction: row;
  margin-top:15rpx; 
}

.section .comment .content .JG>view:first-of-type {
  width: 88rpx;
  height: 32rpx;
  margin: auto 0;
  margin-right: 12rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 4rpx;
  background: -webkit-linear-gradient(left, #ff4b50, #ff906c);
}

.section .comment .content .JG>view:last-of-type {
  margin-right: 28rpx;
  float: left;
  line-height: 40px;
}

.section .comment .content .JG>view:last-of-type>text:first-of-type {
  font-size: 32rpx;
  color: #f66;
}

.section .comment .content .JG>view:last-of-type>text:last-of-type {
  font-size: 56rpx;
  color: #f66;
}

.section .comment .content .JG>text {

}

/* 优惠券部分样式 */

.section .coupon {
  width: 708rpx; 
  height: 200rpx;
  margin: 0 auto;
  box-sizing: border-box;
  position: relative;
}

.section .coupon>image {
  width: 708rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
}

.section .coupon .content {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.section .coupon .content>view:first-of-type {
  display: flex;
  width: 488rpx;
  height: 100%;
  /* line-height: 200rpx; */
  flex-direction: column;
  text-align: center;
  /* justify-content: center; */
}
.section .coupon .content>view:first-of-type>text:first-of-type{
  margin-top: 56rpx;
  margin-bottom: 13rpx;
}

.section .coupon .content>view:first-of-type>text:last-of-type {
  font-size: 22rpx;
  color: #ffe8d3;
  display: inline;
  line-height: 22rpx;
  margin-bottom: 65rpx;
}

.section .coupon .content>view:first-of-type>text:first-of-type text:first-of-type{
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.section .coupon .content>view:first-of-type>text:first-of-type text:last-of-type {
  font-size: 34rpx;
  color: #fff;
  font-weight: 500;
  line-height: 34rpx;
}



.section .coupon .content>view:last-of-type {
  width: 220rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 200rpx;
}

.section .coupon .content>view:last-of-type text {
  margin-left: 42rpx;
  line-height: 200rpx;
  
}

.section .coupon .line {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 12rpx;
  background-color: #F7F7F7;
}

/* 历史价格曲线 */

.section .trendChart{
  position: relative;
}

.section .trendChart .title{
  text-align:center;
  font-size:30rpx;
  color: #555555;
  border-top: 10rpx solid #F4F4F4;
  height:76rpx;
  line-height:76rpx;
}

.section .trendChart .canTop{
  height: 84rpx;
  line-height: 84rpx;
}

.section .trendChart .canTop>text:first-of-type{
  font-size: 24rpx;
  color: #555555;
  float: left;
  margin-left: 20px;
}
.section .trendChart .canTop>text:last-of-type{
  font-size: 24rpx;
  color: #555555;
  float: right;
  margin-right: 20px;
}

.section .trendChart .canTop>text:first-of-type text{
  font-size: 24rpx;
  color: #00C68C;

}
.section .trendChart .canTop>text:last-of-type text{
  font-size: 24rpx;
  color: #FF7D77;
}

.section .trendChart .canBottom{
  font-size: 14px;
  height: 40px;
  line-height: 40px;
  margin-top: 10rpx;
  
 
}

.section .trendChart .canBottom text{
 font-size: 26rpx;
 color: #FF5C5C;
 margin-left: 20px;
}

.section .fanli .tip{
  display: block;
  width: 100%;
  height: 84rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 84rpx; 
  padding-left: 31rpx;
  margin-top: 24rpx;    
}

.section .fanli .btn {
  display: block;
  width: 686rpx;
  height: 100rpx;
  border-radius: 8rpx;
  border: 2rpx solid #FF5548;
  margin: 8rpx auto;
  margin-bottom: 24rpx;
  /* text-align: center; */
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.section .fanli .btn text {
  font-size: 28rpx;
  color: #FF5548;
  float: left;
  line-height: 100rpx;
}
.section .fanli .btn text:first-of-type {
  /* margin-left: 100rpx; */
}
.section .fanli .btn text:nth-child(2) {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 100rpx;
}
.section .fanli .line {
  width: 100%;
  height: 12rpx;
  background-color: #F7F7F7;
}

.section .fanli .text{
  display: flex;
  flex-direction: column;

}
.section .fanli .text>text{
  font-size: 26rpx;
  line-height: 44rpx;
  color: #555;
  width: 100%;
  padding-left: 31rpx;
  box-sizing:border-box;
}
.section .fanli .text text:first-of-type .title{
  line-height: 44rpx;
  font-size: 28rpx;
  color: #ff5548;
}
.section .fanli .text text:first-of-type .dot{
  display: inline-block;
  background-color: #ff5548;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  margin-top: -6rpx;
}

.section .fanli .text text:last-of-type{
  margin-bottom: 44rpx;
}


