/* pages/rebatePage/rebatePacket.wxss */
page,
.section {
  width: 100%;
  height: 100%;
  background-color: #f5f5f6;
}
.section .top {
  width: 100%;
  height: 184rpx;
  position: relative;
  background-image: linear-gradient(to right, #ff5a4e, #fb7e57);
}
.section .top text:nth-of-type(1) {
  margin-top: 32rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #fff;
}
.section .top text:nth-of-type(2) {
  margin-top: 20rpx;
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
  color: #fff;
}
/* 红包列表 */
.section .packetList {
  background-color: #ffffff;
}
.section .packetList .packet {
  width: 100%;
  border-bottom: 1rpx solid #f5f5f6;
  padding: 32rpx 28rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}
.section .packetList .packet .describe {
  width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  color: #333;
  line-height: 30rpx;
}
.section .packetList .packet .ctime {
  font-size: 24rpx;
  color: #A5A5A5;
  line-height: 24rpx;
  margin-top: 28rpx;
}
.section .packetList .packet .money {
  position: absolute;
  right: 30rpx;
  top: 32rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  color: #333;
}
