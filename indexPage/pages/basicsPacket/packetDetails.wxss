/* pages/basicsPacket/packetDetails.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 首页进入部分 */

.section {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  height: 646rpx;
  position: relative;
}

.content .bgc{
  width: 100%;
  height: 210rpx;
}
.content .Icon{
  position: absolute;
  top: 112rpx;
  left: 50%;
  margin-left: -80rpx;
  width: 160rpx;
  height: 160rpx;
}
.content .top{
  font-size: 32rpx;
  position: absolute;
  right: 28rpx;
  top: 32rpx;
  color: #FFF;
}

.content .main{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 67rpx;
}

.content .main>text:first-of-type{
  font-size: 27rpx;
  line-height: 27rpx;
}
.content .main>text:nth-last-of-type(2){
  font-size: 35rpx;
  line-height: 35rpx;
  margin-top: 40rpx;
}

.content .main .money{
  margin-top: 68rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.content .main .money>text:first-of-type{
  font-size: 44rpx;
  color: #333;
  margin-right: 8rpx;
}

.content .main .money>text:last-of-type{
  font-size: 96rpx;
  color: #333;
  line-height: 96rpx;  
}

.content .main .withdraw{
  font-size: 24rpx;
  color: #41A5FA;
  line-height: 24rpx;
  margin-top: 40rpx;
}

.packetList{

}

.packetList>.line{
  width: 100%;
  height: 12rpx;
  background-color: #F7F7F7;
}

.packetList .top{
  width: 100%;
  height: 100rpx;
  background-color: #FF756A;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}

.packetList .top .todayPacket,
.packetList .top .packetAddUp{
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #FFF;
  padding-left: 28rpx;
  box-sizing: border-box;
}

.packetList .top .line{
  position: absolute;
  left: 50%;
  width: 1rpx;
  height: 40rpx;
  opacity: 0.5;
  background-color: #fff;
}

/* 红包列表 */
.packetList .list{
  background-color: #ffffff;
}

.packetList .list .packet{
  width: 100%;
  height: 124rpx;
  border-bottom: 1rpx solid #f5f5f6;
  padding-left: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}

.packetList .list .packet .type{
  font-size: 30rpx;
  color: #333;
  margin-top: 30rpx;
  line-height: 30rpx;
}

.packetList .list .packet .ctime{
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  line-height: 24rpx;
}

.packetList .list .packet .money{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  font-size: 36rpx;
  color: #333;
}