/* pages/login/login.wxss */

page, .section {
  width: 100%;
  height: 100%;
  background-color: #f5f5f6;
}

.section .login {
  margin-top: 30rpx;
  position: relative;
  background-color: #fff;
}

.section .btn {
  margin-top: 60rpx;
}

.section .Notescontact {
  display: block;
  margin-top: 740rpx;
}

.section .login input {
  height: 90rpx;
  color: #999;
  font-size: 30rpx;
  padding-left: 30rpx;
  line-height: 90rpx;
}

.section .login .phone {
  border-bottom: 1rpx solid #e6e6e6;
  color: #333;
}

.section .login .authCode {
  width: 490rpx;
  box-sizing: border-box;
  color: #333
}

.section .login .getauthCode {
  position: absolute;
  right: 0;
  bottom: 5rpx;
  width: 260rpx;
  height: 80rpx;
  border-left: 1rpx solid #e6e6e6;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  line-height: 80rpx;
  z-index: 1;
}

.section .login .getauthCodeActive {
  color: #ff756a;
}



.section .btn {
  width: 690rpx;
  height: 90rpx;
  background-color: #ccc;
  color: #fff;
}

.section .btnActive {
  background-color: #ff756a;
}

.section .btn::after {
  border: none;
}

.section .Notescontact {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.section .phonHasBind,
.section .networkOutage,
.section .authCodeFaile{
  width: 600rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.section .authCodeSuccess{
  width: 600rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 300rpx;
  font-size: 32rpx;
  color: #333;
}


.section .phonHasBind .top,
.section .networkOutage .top,
.section .authCodeFaile .top{
  margin-top: 50rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 32rpx;
  color: #333;
}

.section .phonHasBind .content,
.section .networkOutage .content,
.section .authCodeFaile .content{
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.section .phonHasBind .content{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.section .phonHasBind .btn,
.section .networkOutage .btn,
.section .authCodeFaile .btn{
  margin-top: 50rpx;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #ff756a;
  border-top: 1rpx solid #999;
}

.section .phonHasBind .btn{
  display: flex;
  flex-direction: row;
}

.section .phonHasBind .btn view{
  width: 50%;
}
.section .phonHasBind .btn view:first-of-type{
  border-right: 1rpx solid #999;
  box-sizing: border-box;
  color: #333;
}
.section .phonHasBind .btn view::after{
  border: none;
}

